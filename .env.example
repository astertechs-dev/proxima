# Proxima Environment Configuration

# Database Configuration
DATABASE_URL=postgres://proxima_user:proxima_password@postgres:5432/proxima?sslmode=disable
MONGODB_URL=mongodb://proxima_user:proxima_password@mongodb:27017/proxima
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=168h

# API Configuration
API_BASE_URL=http://localhost:8080
FRONTEND_URL=http://localhost:3000

# External API Keys (Optional - for development)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
DOCUSIGN_INTEGRATION_KEY=your_docusign_integration_key
GOOGLE_CALENDAR_API_KEY=your_google_calendar_api_key
FREEE_CLIENT_ID=your_freee_client_id
FREEE_CLIENT_SECRET=your_freee_client_secret

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# File Storage Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-northeast-1
S3_BUCKET_NAME=proxima-files

# Monitoring Configuration
DATADOG_API_KEY=your_datadog_api_key
SENTRY_DSN=your_sentry_dsn

# Development Configuration
NODE_ENV=development
LOG_LEVEL=debug
ENABLE_CORS=true

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key
CORS_ORIGIN=http://localhost:3000

# AI/ML Configuration
OPENAI_API_KEY=your_openai_api_key
HUGGINGFACE_API_KEY=your_huggingface_api_key

# GitHub Integration (for portfolio)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
